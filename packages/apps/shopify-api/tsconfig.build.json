{
  "extends": "../../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/ts",
    "rootDir": ".",
    "module": "Preserve",
    "moduleResolution": "Bundler"
  },
  "include": [
    "lib/**/*.ts",
    "future/**/*.ts",
    "adapters/**/*.ts",
    "rest/**/*.ts",
    "runtime/**/*.ts",
    "test-helpers/**/*.ts",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/test/*",
    "**/__tests__/*",
    "**/__e2etests__/*",
    "**/__test-helpers"
  ]
}
